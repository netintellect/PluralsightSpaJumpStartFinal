                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="10" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Text="latitude" VerticalAlignment="Center" />

                            <TextBox Grid.Column="2" x:Name="Degrees1" Text="degrees [from -90 to 90]" Height="Auto"  Foreground="Black" />
                            <TextBox Grid.Column="4" x:Name="Minutes1" Text="minutes [from 0 to 59]" Height="Auto"  Foreground="Black" />
                            <TextBox Grid.Column="6" x:Name="Seconds1" Text="seconds [from 0 to 59.99]" Height="Auto"  Foreground="Black" />

                            <TextBlock Grid.Row="2" Text="longitude" VerticalAlignment="Center"/>

                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="Degrees2" Text="degrees [from -180 to 180]" Height="Auto"  Foreground="Black" />
                            <TextBox Grid.Row="2" Grid.Column="4" x:Name="Minutes2" Text="minutes [from 0 to 59]" Height="Auto"  Foreground="Black" />
                            <TextBox Grid.Row="2" Grid.Column="6" x:Name="Seconds2" Text="seconds [from 0 to 59.99]" Height="Auto"  Foreground="Black" />

                        </Grid>
                        <StackPanel Grid.Row="1" Margin="15, 0, 0, 0">

                            <Border BorderThickness="1" BorderBrush="#FFD6D4D4">
                                <StackPanel>
                                    <StackPanel Style="{StaticResource HeaderStyle}">
                                        <Image Source="..//Images/settings.png" Stretch="Fill" Height="24" Width="24" Margin="4,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="OPTIONS" VerticalAlignment="Center" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Margin="10, 11, 10, 0">
                                        <Grid>
                                            <TextBlock Text="Error Correction Level" VerticalAlignment="Center"/>
                                            <Border HorizontalAlignment="Right" Height="20" Width="20" Background="#FFD6D4D4" CornerRadius="3" Cursor="Hand" MouseLeftButtonDown="TextBlock_ErrorCorrection" >
                                                <TextBlock Text="?" Style="{StaticResource HelpText}" />
                                            </Border>
                                        </Grid>
                                        <telerik:RadComboBox x:Name="Tab4ErrorCombo">
                                            <telerik:RadComboBoxItem IsSelected="True" Content="L" />
                                            <telerik:RadComboBoxItem Content="M" />
                                            <telerik:RadComboBoxItem Content="Q" />
                                            <telerik:RadComboBoxItem Content="H" />
                                        </telerik:RadComboBox>
                                    </StackPanel>

                                    <StackPanel Margin="10, 11, 10, 12">
                                        <Grid>
                                            <TextBlock Text="Size Version" VerticalAlignment="Center"/>
                                            <Border Style="{StaticResource HelpTextBackground}" Cursor="Hand" MouseLeftButtonDown="TextBlock_Version">
                                                <TextBlock Text="?" Style="{StaticResource HelpText}" />                                              
                                            </Border>
                                        </Grid>
                                        <telerik:RadComboBox x:Name="Tab4SizeCombo">
                                            <telerik:RadComboBoxItem Content="10" IsSelected="True" />
                                            <telerik:RadComboBoxItem Content="11" />
                                            <telerik:RadComboBoxItem Content="12" />
                                            <telerik:RadComboBoxItem Content="13" />
                                            <telerik:RadComboBoxItem Content="14" />
                                            <telerik:RadComboBoxItem Content="15" />
                                            <telerik:RadComboBoxItem Content="16" />
                                            <telerik:RadComboBoxItem Content="17" />
                                            <telerik:RadComboBoxItem Content="18" />
                                            <telerik:RadComboBoxItem Content="19" />
                                            <telerik:RadComboBoxItem Content="20" />
                                            <telerik:RadComboBoxItem Content="21" />
                                            <telerik:RadComboBoxItem Content="22" />
                                            <telerik:RadComboBoxItem Content="23" />
                                            <telerik:RadComboBoxItem Content="24" />
                                            <telerik:RadComboBoxItem Content="25" />
                                            <telerik:RadComboBoxItem Content="26" />
                                            <telerik:RadComboBoxItem Content="27" />
                                            <telerik:RadComboBoxItem Content="28" />
                                            <telerik:RadComboBoxItem Content="29" />
                                            <telerik:RadComboBoxItem Content="30" />
                                            <telerik:RadComboBoxItem Content="31" />
                                            <telerik:RadComboBoxItem Content="32" />
                                            <telerik:RadComboBoxItem Content="33" />
                                            <telerik:RadComboBoxItem Content="34" />
                                            <telerik:RadComboBoxItem Content="35" />
                                            <telerik:RadComboBoxItem Content="36" />
                                            <telerik:RadComboBoxItem Content="37" />
                                            <telerik:RadComboBoxItem Content="38" />
                                            <telerik:RadComboBoxItem Content="39" />
                                            <telerik:RadComboBoxItem Content="40" />
                                        </telerik:RadComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Grid>
                                <telerik:RadButton x:Name="Tab4Generate" 
                                                   Content="Generate" 
                                                   HorizontalAlignment="Left"
                                                   Click="Tab4Generate_Click" 
                                                   Style="{StaticResource GenerateButtonStyle}" />
                                <telerik:RadButton x:Name="Tab4Export"
                                                   Content="Export"
                                                   HorizontalAlignment="Right"
                                                   Click="Tab4ExportButton_Click" 
                                                   Style="{StaticResource GenerateButtonStyle}" />
                            </Grid>
                        </StackPanel>

                        <Border BorderBrush="#FFD6D4D4" BorderThickness="1" Grid.Column="1" Grid.Row="1" Margin="15,0,15,15">
                            <StackPanel>
                                <StackPanel Style="{StaticResource HeaderStyle}">
                                    <Grid Margin="4,0,4,0" Width="20" Height="20" VerticalAlignment="Center">
                                        <Rectangle Fill="{telerik:Windows8Resource ResourceKey=StrongBrush}" StrokeThickness="3" Stroke="{telerik:Windows8Resource ResourceKey=MainBrush}"/>
                                        <Rectangle Fill="{telerik:Windows8Resource ResourceKey=MainBrush}" Margin="7" StrokeThickness="3" />
                                    </Grid>
                                    <TextBlock Text="RESULT" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                                <Grid Width="370" Height="370">
                                    <telerik:RadBarcodeQR
                                                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                      x:Name="QRCode4" Mode="Byte" Version="10" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </telerik:RadTabItem.Content>

            </telerik:RadTabItem>

        </telerik:RadTabControl>


    </Grid>
</UserControl>
