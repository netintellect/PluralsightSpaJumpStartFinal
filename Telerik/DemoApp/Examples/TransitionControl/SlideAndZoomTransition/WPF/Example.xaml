	<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TransitionControl;component/SlideAndZoomTransition/WPF/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BorderBrush" Value="#FFD4D2D2" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Width" Value="628" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Height" Value="300" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Frame">
                            <Grid Background="{TemplateBinding Background}">
                                <telerik:RadTransitionControl x:Name="PART_FrameCP" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}">
                                    <telerik:RadTransitionControl.Transition>
                                        <telerik:SlideAndZoomTransition />
                                    </telerik:RadTransitionControl.Transition>
                                </telerik:RadTransitionControl>
                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="CustomTemplate">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Path Data="{Binding DisplayPath}" Fill="White" Height="{Binding DisplayPathHeight}" Width="{Binding DisplayPathWidth}" Stretch="Fill" />
                    <StackPanel Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0 ">
                            <TextBlock Text="{Binding DisplayMaxTemperature}" Style="{StaticResource TextBoxBoldStyle}"/>
                            <TextBlock Text="{Binding DisplayMinTemperature}" Style="{StaticResource TextBoxNormalStyle}" />
                        </StackPanel>
                        <TextBlock Text="{Binding DisplayName}" Style="{StaticResource TextBoxHeaderStyle}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" Style="{StaticResource FrameStyle}" Source="{Binding SelectedPage.PageUri}" SnapsToDevicePixels="True"/>

        <telerik:RadListBox ItemsSource="{Binding Pages}" SelectedItem="{Binding SelectedPage, Mode=TwoWay}" Grid.Row="1"
                            ItemTemplate="{StaticResource CustomTemplate}" VerticalAlignment="Top" HorizontalAlignment="Left"
                            Style="{StaticResource ListBoxStyle}" />

    </Grid>
</UserControl>
