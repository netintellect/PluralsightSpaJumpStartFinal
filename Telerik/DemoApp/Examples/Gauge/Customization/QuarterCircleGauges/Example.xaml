<demo:DynamicBasePage x:Class="Telerik.Windows.Examples.Gauge.Customization.QuarterCircleGauges.Example"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					  xmlns:sys="clr-namespace:System;assembly=mscorlib"
					  xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                      xmlns:telerikQuickStart="clr-namespace:Telerik.Windows.Controls.QuickStart;assembly=QuickStart.Common"
					  xmlns:demo="clr-namespace:Telerik.Examples.Gauge"
        HorizontalAlignment="Center" VerticalAlignment="Center">

    <telerikQuickStart:QuickStart.ExampleHeader>
        <TextBlock Text="Quadrant-style gauges" Margin="8" />
    </telerikQuickStart:QuickStart.ExampleHeader>
    <Grid Width="740" Height="520">
        <Grid Margin="100">
		    <Grid.RowDefinitions>
			    <RowDefinition Height="*" />
			    <RowDefinition Height="*" />
		    </Grid.RowDefinitions>
		    <Grid.ColumnDefinitions>
			    <ColumnDefinition Width="*" />
			    <ColumnDefinition Width="*" />
		    </Grid.ColumnDefinitions>

            <telerik:RadQuadrantNWGauge Width="120" Height="120" Grid.Row="0" Grid.Column="0">
				<telerik:QuadrantNWScale Min="0" Max="50" MajorTickStep="10">
					<telerik:QuadrantNWScale.Indicators>
					    <telerik:Needle Name="needleNW" IsAnimated="True" />
					    <telerik:Pinpoint />
					</telerik:QuadrantNWScale.Indicators>
				</telerik:QuadrantNWScale>
		    </telerik:RadQuadrantNWGauge>

            <telerik:RadQuadrantNEGauge Width="120" Height="120" Grid.Row="0" Grid.Column="1">
				<telerik:QuadrantNEScale Min="0" Max="50" MajorTickStep="10">
					<telerik:QuadrantNEScale.Indicators>
					    <telerik:Needle Name="needleNE" IsAnimated="True" />
					    <telerik:Pinpoint />
					</telerik:QuadrantNEScale.Indicators>
				</telerik:QuadrantNEScale>
		    </telerik:RadQuadrantNEGauge>

            <telerik:RadQuadrantSEGauge Width="120" Height="120" Grid.Row="1" Grid.Column="1">
				<telerik:QuadrantSEScale Min="0" Max="50" MajorTickStep="10">
					<telerik:QuadrantSEScale.Indicators>
					    <telerik:Needle Name="needleSE" IsAnimated="True" />
					    <telerik:Pinpoint />
					</telerik:QuadrantSEScale.Indicators>
				</telerik:QuadrantSEScale>
		    </telerik:RadQuadrantSEGauge>

            <telerik:RadQuadrantSWGauge Width="120" Height="120" Grid.Row="1" Grid.Column="0">
				<telerik:QuadrantSWScale Min="0" Max="50" MajorTickStep="10">
					<telerik:QuadrantSWScale.Indicators>
					    <telerik:Needle Name="needleSW" IsAnimated="True" />
					    <telerik:Pinpoint />
					</telerik:QuadrantSWScale.Indicators>
				</telerik:QuadrantSWScale>
		    </telerik:RadQuadrantSWGauge>
	    </Grid>
    </Grid>
</demo:DynamicBasePage>
