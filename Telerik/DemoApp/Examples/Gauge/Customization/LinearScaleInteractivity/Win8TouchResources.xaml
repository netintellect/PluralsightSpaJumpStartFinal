<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="telerik:LinearScaleMarker" BasedOn="{StaticResource LinearScaleMarkerStyle}">
        <Setter Property="telerik:ScaleObject.RelativeHeight" Value="20" />
        <Setter Property="telerik:ScaleObject.RelativeWidth" Value="20" />
    </Style>

    <system:Double x:Key="imageWidth">28</system:Double>
    <system:Double x:Key="imageHeight">32</system:Double>
    <system:Double x:Key="fontSize">16</system:Double>

</ResourceDictionary>