<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
	<Style TargetType="TextBlock" x:Key="TextBlockStyle">
        <Setter Property="Foreground" Value="#FF686868" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0 3 35 0" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
	<Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
        <Setter Property="Width" Value="215" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Margin" Value="0 0 0 15" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>  
	<Style TargetType="TextBlock" x:Key="TextBlockHeaderStyle">
		<Setter Property="Margin" Value="0 10" />
		<Setter Property="FontFamily" Value="Segoe UI" />
		<Setter Property="FontSize" Value="12" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Foreground" Value="#FF1892D6" />
	</Style>
	<Style TargetType="TextBlock" x:Key="TextBlockStyleContent">
		<Setter Property="FontFamily" Value="Segoe UI" />
		<Setter Property="FontSize" Value="12" />
		<Setter Property="Foreground" Value="#FF000000" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin" Value="10 0 0 0" />
	</Style>
</ResourceDictionary>
