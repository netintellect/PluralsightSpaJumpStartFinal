<UserControl x:Class="Telerik.Windows.Examples.ListBox.Theming.Example"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
		xmlns:qsf="clr-namespace:Telerik.Windows.Controls.QuickStart;assembly=QuickStart.Common"
		HorizontalAlignment="Center" VerticalAlignment="Center">

	<qsf:QuickStart.ExampleHeader>
		<TextBlock Text="Theming" Margin="8" />
	</qsf:QuickStart.ExampleHeader>

	<Border qsf:ThemeAwareBackgroundBehavior.IsEnabled="True">
		<StackPanel Width="300" Height="250">
			<telerik:RadListBox Height="200" Margin="25" VerticalAlignment="Center" SelectedIndex="0">
				<telerik:RadListBoxItem Content="RadDocking control" />
				<telerik:RadListBoxItem Content="RadScheduleView control" />
				<telerik:RadListBoxItem Content="RadMenu control" />
				<telerik:RadListBoxItem Content="RadGridView control" />
				<telerik:RadListBoxItem Content="RadGauge control" />
				<telerik:RadListBoxItem Content="RadWindow control" />
				<telerik:RadListBoxItem Content="RadRibbonView control" />
				<telerik:RadListBoxItem Content="RadTabControl control" />
				<telerik:RadListBoxItem Content="RadTransition control" />
				<telerik:RadListBoxItem Content="RadComboBox control" />
			</telerik:RadListBox>
		</StackPanel>
	</Border>

</UserControl>