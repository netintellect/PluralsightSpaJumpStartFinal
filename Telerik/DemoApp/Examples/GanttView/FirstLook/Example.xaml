						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="50" />
						</Grid.RowDefinitions>
						<Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="36" Height="36">
							<Ellipse Stroke="{StaticResource AccentBrush}" />
