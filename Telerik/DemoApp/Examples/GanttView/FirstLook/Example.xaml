						Style="{StaticResource SmallDemoButton}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="24" Height="24">
