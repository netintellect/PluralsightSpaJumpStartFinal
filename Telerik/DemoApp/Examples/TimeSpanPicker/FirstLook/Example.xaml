                        <Path.RenderTransform>
                            <RotateTransform Angle="-135"/>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Grid>
        </telerikQuickStart:HeaderedContentControl>
    </Grid>
</UserControl>
