<UserControl x:Class="Telerik.Windows.Examples.Window.Theming.ThemingUserControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

	<Grid x:Name="LayoutRoot" Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<TextBlock TextWrapping="Wrap" Text="Release Notes" FontFamily="Segoe UI Light" FontSize="18"
				Foreground="#FF16ABA9" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 0 0 5" />

		<Border Grid.Row="1" BorderBrush="#FFD6D4D4" BorderThickness="1">
			<StackPanel Orientation="Vertical" Margin="18 5">
				<TextBlock Margin="0 8" TextWrapping="Wrap" Text="What's new" FontFamily="Segoe UI Light" FontSize="18"
						VerticalAlignment="Top" />
				<TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" FontFamily="Segoe UI" Margin="0"
						Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum." />
				<TextBlock TextWrapping="Wrap" FontFamily="Segoe UI" Margin="0 10"
						Text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old." />
				<TextBlock TextWrapping="Wrap" FontFamily="Segoe UI" FontSize="12" Foreground="#FFED0B00"
						Text="Learn more about how this release is helping improve your product." />
			</StackPanel>
		</Border>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15">
			<telerik:RadButton Content="Download" Width="76" />
			<telerik:RadButton Content="Cancel" Margin="20 0 0 0" Width="76" />
		</StackPanel>

	</Grid>
</UserControl>
