<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="Telerik.Windows.Examples.Slider.Theming.Example"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:telerikQuickStart="clr-namespace:Telerik.Windows.Controls.QuickStart;assembly=QuickStart.Common"
         HorizontalAlignment="Center" VerticalAlignment="Center">
    <telerikQuickStart:QuickStart.ExampleHeader>
        <Grid>
            <TextBlock Text="Theming" Margin="8"/>
        </Grid>
    </telerikQuickStart:QuickStart.ExampleHeader>
    <Grid Width="600" Height="400">
        <Border telerikQuickStart:ThemeAwareBackgroundBehavior.IsEnabled="True" />
		<telerik:RadSlider x:Name="radSlider1" TickPlacement="Both" Margin="10 0" 
						   IsSelectionRangeEnabled="True" Minimum="0" Maximum="100"
						   SelectionStart="40" SelectionEnd="60" MinimumRangeSpan="0"
						   MaximumRangeSpan="100" IsMoveToPointEnabled="False"
						   IsMouseWheelEnabled="True" IsDirectionReversed="False"
						   IsSnapToTickEnabled="False" TickFrequency="10"
						   VerticalAlignment="Center" HandlesVisibility="Visible"/>
        <!--<telerik:RadSlider  Margin="10 0" 
                SmallChange="1"
				LargeChange="5"
				TickFrequency="10"
				TickPlacement="Both" Orientation="Horizontal" VerticalAlignment="Center"
				HandlesVisibility="Visible" />-->
       
    </Grid>
</UserControl>

