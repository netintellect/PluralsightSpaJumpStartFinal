<t:RadDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:t="clr-namespace:Telerik.Windows.Documents.Model;assembly=Telerik.Windows.Documents"
               xmlns:s="clr-namespace:Telerik.Windows.Documents.Model.Styles;assembly=Telerik.Windows.Documents"
               xmlns:r="clr-namespace:Telerik.Windows.Documents.Model.Revisions;assembly=Telerik.Windows.Documents"
               xmlns:n="clr-namespace:Telerik.Windows.Documents.Model.Notes;assembly=Telerik.Windows.Documents"
               xmlns:th="clr-namespace:Telerik.Windows.Documents.Model.Themes;assembly=Telerik.Windows.Documents"
               
               LayoutMode="Paged"
               LineSpacing="1.15"
               LineSpacingType="Auto"
               ParagraphDefaultSpacingAfter="12"
               ParagraphDefaultSpacingBefore="0"
               SectionDefaultPageSize="832,1116"
               SelectedBibliographicStyleName="\APA.XSL"
               StyleName="defaultDocumentStyle">
    <t:RadDocument.Captions>
        <t:CaptionDefinition IsDefault="True"
                             IsLinkedToHeading="False"
                             Label="Figure"
                             LinkedHeadingLevel="0"
                             NumberingFormat="Arabic"
                             SeparatorType="Hyphen" />
        <t:CaptionDefinition IsDefault="True"
                             IsLinkedToHeading="False"
                             Label="Table"
                             LinkedHeadingLevel="0"
                             NumberingFormat="Arabic"
                             SeparatorType="Hyphen" />
    </t:RadDocument.Captions>
    <t:RadDocument.Lists>
        <t:ListSerializationData ID="1"
                                 StyleID="1" />
    </t:RadDocument.Lists>
    <t:RadDocument.ListStyles>
        <t:ListStyle ID="1"
                     IsDefault="True">
            <t:ListLevelStyle HangingIndent="24"
                              Indent="48"
                              LevelText="{}{0}."
                              NumberingFormat="Bullet" 
                              StartingIndex="1" />
        </t:ListStyle>
    </t:RadDocument.ListStyles>
    <t:RadDocument.ProtectionSettings>
        <t:DocumentProtectionSettings EnableDocumentProtection="False"
                                       />
    </t:RadDocument.ProtectionSettings>
    <t:RadDocument.Styles>
        <s:StyleDefinition DisplayName="Document Default Style"
                           IsCustom="False"
                           IsDefault="False"
                           IsPrimary="True"
                           Name="defaultDocumentStyle"
                           Type="Default">
            <s:StyleDefinition.ParagraphStyle>
                <s:ParagraphProperties LineSpacing="1.14999997615814"
                                       LineSpacingType="Auto"
                                       SpacingAfter="13.3333330154419"
                                       SpacingBefore="0" />
            </s:StyleDefinition.ParagraphStyle>
            <s:StyleDefinition.SpanStyle>
                <s:SpanProperties FontSize="14.6666669845581" />
            </s:StyleDefinition.SpanStyle>
        </s:StyleDefinition>
        <s:StyleDefinition DisplayName="Normal"
                           IsCustom="False"
                           IsDefault="True"
                           IsPrimary="True"
                           Name="Normal"
                           Type="Paragraph" />
        <s:StyleDefinition DisplayName="TableNormal"
                           IsCustom="False"
                           IsDefault="True"
                           IsPrimary="True"
                           Name="TableNormal"
                           Type="Table">
            <s:StyleDefinition.TableStyle>
                <s:TableProperties CellPadding="5,0,5,0" />
            </s:StyleDefinition.TableStyle>
        </s:StyleDefinition>
        <s:StyleDefinition DisplayName="Title"
                           IsCustom="True"
                           IsDefault="False"
                           IsPrimary="True"
                           Name="Title"
                           Type="Paragraph">
            <s:StyleDefinition.SpanStyle>
                <s:SpanProperties FontFamily="Calibri"
                                  FontSize="32"
                                  ForeColor="#FF1F497D"/>
            </s:StyleDefinition.SpanStyle>
        </s:StyleDefinition>
    </t:RadDocument.Styles>
    <t:Section PageMargin="96,96,96,96">
        <t:Section.Footers>
            <t:Footers>
                <t:Footers.Default>
                    <t:Footer IsLinkedToPrevious="False" />
                </t:Footers.Default>
            </t:Footers>
        </t:Section.Footers>
        <t:Section.Headers>
            <t:Headers>
                <t:Headers.Default>
                    <t:Header IsLinkedToPrevious="False">
                        <t:Header.WatermarkSettings>
                            <t:DocumentWatermarkSettings Type="NoWatermark" />
                        </t:Header.WatermarkSettings>
                    </t:Header>
                </t:Headers.Default>
            </t:Headers>
        </t:Section.Headers>

        <t:Paragraph LineSpacing="1">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#218332"
                    HighlightColor="#00FFFFFF"
                    Text="Click anywhere in the document to show the RadRadialMenu."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>

        <t:Paragraph FontSize="12"
                     LineSpacing="1"
                     StyleName="Title">
            <t:Paragraph.ParagraphSymbolPropertiesStyle>
                <s:SpanProperties FontSize="12" />
            </t:Paragraph.ParagraphSymbolPropertiesStyle>
            <t:Span Text="RadRadialMenu integration with RadRichTextBox" FontFamily="Verdana" FontSize="24" ForeColor="#FF25A0DA" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="The RadRadialMenu is designed to be easily integratable with any existing control and application in order to provide an easier menu control experience to the user. In the current example the default"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Bold"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" SelectionMiniToolBar"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" is replaced by a"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Bold"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" RadRadialMenu"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" control."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>

        <t:Paragraph LineSpacing="1">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Closing/hiding the RadRadialMenu in the example is done by"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Bold"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" pressing the 'Escape'"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" keyboard key. Note that if there is a highlighted text the first 'Escape' key press will unhighlight the text and the second one will close/hide the RadRadialMenu."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>

        <t:Paragraph FontSize="12"
                     LineSpacing="1"
                     StyleName="Title">
            <t:Paragraph.ParagraphSymbolPropertiesStyle>
                <s:SpanProperties FontSize="12" />
            </t:Paragraph.ParagraphSymbolPropertiesStyle>
            <t:Span Text="Overview" FontFamily="Verdana" FontSize="20" ForeColor="#FF25A0DA" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Radial menu is a"
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Bold"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text=" circular menu "
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="where selection depends on direction. Radial menu (sometimes called pie menu or marking menu) is made of several 'pie slices' around an inactive center and works best with stylus input, and well with a mouse. Pie slices are drawn with a hole in the middle for an easy way to exit the menu."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Radial menus have been around since the late 1960s but never really got much traction in traditional mainstream interfaces, with one exception: games. They can work with a variety of pointing devices -- not just mice, but also pens, trackballs, touchscreens."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>

        <t:Paragraph FontSize="12"
                     LineSpacing="1"
                     StyleName="Title">
            <t:Paragraph.ParagraphSymbolPropertiesStyle>
                <s:SpanProperties FontSize="12" />
            </t:Paragraph.ParagraphSymbolPropertiesStyle>
            <t:Span Text="Advantages" FontFamily="Verdana" FontSize="20" ForeColor="#FF25A0DA" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1"
                     ListId="1"
                     TextAlignment="Justify">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Faster and more reliable than linear menus, because pointing at a slice requires very little cursor motion, and the large area and wedge shape make them easy targets. According to Fitts' Law: the closer the target and the bigger it is, the easier and faster it is to hit."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1"
                     ListId="1"
                     RightIndent="0"
                     TextAlignment="Justify">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="You get faster with radial menus over time, because they take advantage of muscle memory in a way that list-based menus cannot. Radial menus are essentially gesture-based: touch-swipe-release. Gestures get embedded in muscle memory, which is faster to access than visual memory. Tap-swipe is faster than scanning for an item in a linear list, just like touch-typing is faster than hunt-and-peck."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1"
                     ListId="1"
                     RightIndent="0"
                     TextAlignment="Justify">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Radial menus support 'eyes-free' selection and are therefore accessible for blind people."
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>
        <t:Paragraph LineSpacing="1"
                     ListId="1"
                     RightIndent="0"
                     TextAlignment="Justify">
            <t:Span FontFamily="Verdana"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    ForeColor="#FF000000"
                    HighlightColor="#00FFFFFF"
                    Text="Lower error rate (especially when implemented correctly, such that the hit target for an area is the entire region). "
                    UnderlineColor="#FF000000"
                    UnderlineDecoration="None" />
        </t:Paragraph>
    </t:Section>
</t:RadDocument>