		<ResourceDictionary Source="/Diagrams;component/Common/Resources/Styles.xaml" />
	</ResourceDictionary.MergedDictionaries>

    <!--Converters-->
    <telerik:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
