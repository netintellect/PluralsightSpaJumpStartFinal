    <!-- Team and MemberStyles and Templates-->

    <Style TargetType="controls:OrgChartTeamItemsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:OrgChartTeamItemsControl">
                    <ItemsPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <telerik:RadUniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Border Background="{Binding Branch, Converter={StaticResource ShapeBackgroundBrushSelector}}" Margin="-7"
                                            Visibility="{Binding IsSelected,
                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <Grid Background="{Binding Branch, Converter={StaticResource BackgroundSelector}}" Width="250">
                            <StackPanel Orientation="Horizontal">
                                <Image  Source="{Binding ImagePath}" Width="46" Height="46" Margin="7"/>
                                <StackPanel VerticalAlignment="Center" Margin="3 0 0 0"
                                                 Visibility="{Binding IsInEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource NameTextBlockStyle}"/>
                                    <TextBlock Text="{Binding Position}" VerticalAlignment="Center" FontWeight="Bold" 
                                                   Style="{StaticResource PositionTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center" Margin="3 0 0 0" 
                                                Visibility="{Binding IsInEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <controls:EditingTextBox Text="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=Explicit}" 
                                                                 IsInEditMode="{Binding IsInEditMode, Mode=TwoWay}"
                                                                 FontFamily="Segoe UI Light" FontSize="17.333" />
                                </StackPanel>
                            </StackPanel>
