	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Border Grid.RowSpan="2" BorderBrush="{telerik:Windows8Resource ResourceKey=BasicBrush}"
				Background="{telerik:Windows8Resource ResourceKey=MainBrush}" BorderThickness="1" />
		<Border Background="{telerik:Windows8Resource ResourceKey=AccentBrush}">
			<TextBlock Margin="10 5 0 5" TextWrapping="Wrap" Text="Shapes" FontFamily="Segoe UI Light" FontSize="19"
					Foreground="{telerik:Windows8Resource ResourceKey=MainBrush}" />
		</Border>
		<Border Grid.Row="1">
			<Grid x:Name="ContentGrid" Margin="5">
				<Rectangle Fill="Black" Opacity=".05" />
				<telerik:RadListBox x:Name="ToolBox" BorderBrush="Transparent" BorderThickness="0"
						ItemContainerStyle="{StaticResource ListBoxItemStyle}" Background="Transparent"
						VerticalAlignment="Top">
					<telerik:RadListBox.ItemsPanel>
						<ItemsPanelTemplate>
							<telerik:RadUniformGrid Columns="3" />
						</ItemsPanelTemplate>
					</telerik:RadListBox.ItemsPanel>
					<local:ShapeToolboxItem Geometry="{telerik:CommonShape ShapeType=RectangleShape}" Header="Rectangle" />
					<local:ShapeToolboxItem Geometry="{telerik:CommonShape ShapeType=EllipseShape}" Header="Ellipse" />
					<local:ShapeToolboxItem Geometry="{telerik:CommonShape ShapeType=RoundedRectangleShape}"
							Header="Rounded Rectangle" />
					<local:TextToolboxItem Header="Text" />
                    <local:ProfileToolboxItem Header="Profile" />
                    <local:ImageToolboxItem Source="../../Images/Diagrams/Dashboard/TelerikLogo.png"
                                            ImageLocation="Local" 
                                            Address="/Images/Diagrams/Dashboard/TelerikLogo.png"
                                            Header="Telerik" />
					<local:HyperlinkToolboxItem Address="http://finance.yahoo.com" Header="Yahoo Finance" />
					<local:SparkLineToolboxItem Header="Sparkline" />
					<local:ChartToolboxItem Header="Chart" />
					<local:GridToolboxItem Header="Grid" />
					<local:StockSummaryToolboxItem Header="Summary" />
					<local:ImageToolboxItem Source="../../Images/Diagrams/Dashboard/yahooFinance.jpg"
                                            ImageLocation="Local"
                                            Address="/Images/Diagrams/Dashboard/yahooFinance.jpg" 
                                            Header="Yahoo" />
				</telerik:RadListBox>
			</Grid>
		</Border>
	</Grid>
</UserControl>
