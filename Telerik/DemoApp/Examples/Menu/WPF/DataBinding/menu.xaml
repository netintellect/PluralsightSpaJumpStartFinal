<menuModel:MenuItemsCollection 
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:menuModel="clr-namespace:Examples.Menu.Common;assembly=Menu">
	<menuModel:MenuItem Text="File">
		<menuModel:MenuItem Text="New" ImageUrl="../../Images/Menu/11new.png" />
		<menuModel:MenuItem Text="Open">
			<menuModel:MenuItem Text="Project/Solution..." />
			<menuModel:MenuItem Text="Web Site..." />
			<menuModel:MenuItem Text="Team Project..." />
			<menuModel:MenuItem Text="File..." />
			<menuModel:MenuItem Text="Convert..." />
		</menuModel:MenuItem>
		<menuModel:MenuItem IsSeparator="true" />
		<menuModel:MenuItem Text="Exit" />
	</menuModel:MenuItem>
	<menuModel:MenuItem Text="Edit">
		<menuModel:MenuItem Text="Undo" />
		<menuModel:MenuItem Text="Redo" IsEnabled="false" />
		<menuModel:MenuItem IsSeparator="true" />
		<menuModel:MenuItem Text="Cut" ImageUrl="../../Images/Menu/19cut.png" />
