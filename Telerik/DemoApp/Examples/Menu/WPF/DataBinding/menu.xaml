		<menuModel:MenuItem Text="Object Browser" IsCheckable="True" StaysOpenOnClick="True" />
	</menuModel:MenuItem>
	<menuModel:MenuItem Text="Help">
		<menuModel:MenuItem Text="Index" />
		<menuModel:MenuItem Text="Search" />
		<menuModel:MenuItem Text="Online" />
		<menuModel:MenuItem IsSeparator="true" />
		<menuModel:MenuItem Text="About" />
	</menuModel:MenuItem>
</menuModel:MenuItemsCollection>
