	<menuModel:MenuItem Text="View">
		<menuModel:MenuItem Text="Server Explorer" IsChecked="true" StaysOpenOnClick="True" />
		<menuModel:MenuItem Text="Solution Explorer" IsCheckable="True" StaysOpenOnClick="True" />
