        <local:ViewModel x:Key="menuColorViewModel"/>

        <SolidColorBrush x:Key="BasicBrush" Color="#FFD6D4D4" />

        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontFamily" Value="Segoe UI Light" />
            <Setter Property="Margin" Value="0 10 0 10" />
            <Setter Property="Foreground" Value="{telerik:Windows8Resource ResourceKey=AccentBrush}" />
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <Style TargetType="telerik:RadButton" BasedOn="{StaticResource RadButtonStyle}">
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Margin" Value="3" />
        </Style>

        <Style TargetType="telerik:RadMenuItem" BasedOn="{StaticResource RadMenuItemStyle}">
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style TargetType="Image">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Stretch" Value="UniformToFill" />
        </Style>

        <Style x:Key="MenuShapesItemStyle" TargetType="telerik:RadMenuItem" BasedOn="{StaticResource RadMenuItemStyle}">
            <Setter Property="IconColumnWidth" Value="33" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style x:Key="MenuScreenshotsItemStyle" TargetType="telerik:RadMenuItem" BasedOn="{StaticResource RadMenuItemStyle}">
            <Setter Property="IconColumnWidth" Value="53" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

    </UserControl.Resources>

