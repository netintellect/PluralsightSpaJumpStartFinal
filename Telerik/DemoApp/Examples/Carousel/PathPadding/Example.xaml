	<telerikQuickStart:QuickStart.ConfigurationPanel>
		<StackPanel Margin="3"
					SnapsToDevicePixels="True">
			<telerik:RadSlider x:Name="TopSlider"
							   ValueChanged="TopSlider_ValueChanged"
							   FlowDirection="LeftToRight"
							   Minimum="50"
							   Maximum="300"
							   Value="0"
							   HorizontalAlignment="Center"
							   Width="60">
				<telerik:RadSlider.LayoutTransform>
					<RotateTransform Angle="90" />
				</telerik:RadSlider.LayoutTransform>
			</telerik:RadSlider>
			<StackPanel Orientation="Horizontal">
				<telerik:RadSlider  x:Name="LeftSlider"
									ValueChanged="LeftSlider_ValueChanged"
									Minimum="100"
									Maximum="300"
									Value="0"
									VerticalAlignment="Center"
									Width="60" />
				<Ellipse Height="30"
						 Width="30"
						 Fill="Transparent" />
				<telerik:RadSlider x:Name="RightSlider"
								   ValueChanged="RightSlider_ValueChanged"
								   Minimum="50"
								   Maximum="300"
								   Value="0"
								   VerticalAlignment="Center"
								   Width="60">
					<telerik:RadSlider.LayoutTransform>
						<RotateTransform Angle="180" />
					</telerik:RadSlider.LayoutTransform>
				</telerik:RadSlider>
			</StackPanel>
			<telerik:RadSlider x:Name="BottomSlider"
							   ValueChanged="BottomSlider_ValueChanged"
							   FlowDirection="LeftToRight"
							   Minimum="50"
							   Maximum="300"
							   Value="0"
							   HorizontalAlignment="Center"
							   Width="60">
				<telerik:RadSlider.LayoutTransform>
					<RotateTransform Angle="-90" />
				</telerik:RadSlider.LayoutTransform>
			</telerik:RadSlider>
			<Button x:Name="MoveForward"
					Click="MoveForward_Click"
					Content="Move Forward"
					Margin="0,10,0,2" />
			<Button x:Name="MoveBackward"
					Click="MoveBackward_Click"
					Content="Move Backward"
					Margin="0,2" />
			<Button x:Name="NextPage"
					Click="NextPage_Click"
					Content="Next Page"
					Margin="0,2" />
			<Button x:Name="PreviousPage"
					Click="PreviousPage_Click"
					Content="Previous Page"
					Margin="0,2" />
		</StackPanel>
	</telerikQuickStart:QuickStart.ConfigurationPanel>
